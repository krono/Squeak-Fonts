| createDejaVu config |createDejaVu := [:pointSize :map | | base bold oblique boldOblique point |	point := pointSize asString.	base := (StrikeFont new			buildFromForm: (PNGReadWriter formFromFileNamed: (map at: #base), ' ', point, '.png')			data: (FileStream oldFileNamed: (map at: #base), ' ', point, '.txt' do: [ :file |  				file contentsOfEntireFile substrings collect: [:each | each asNumber ]])			name: (map at: #name), ' ',point)				pointSize: pointSize.	bold := (StrikeFont new			buildFromForm: (PNGReadWriter formFromFileNamed: (map at: #bold), ' ', point, '.png')			data: (FileStream oldFileNamed: (map at: #bold), ' ', point, '.txt' do: [ :file |  				file contentsOfEntireFile substrings collect: [:each | each asNumber ]])			name: (map at: #name), ' ',point, 'B')				pointSize: pointSize.			oblique := (StrikeFont new			buildFromForm: (PNGReadWriter formFromFileNamed: (map at: #oblique), ' ', point, '.png')			data: (FileStream oldFileNamed: (map at: #oblique), ' ', point, '.txt' do: [ :file |  				file contentsOfEntireFile substrings collect: [:each | each asNumber ]])			name: (map at: #name), ' ',point, 'I')				pointSize: pointSize.	boldOblique  := (StrikeFont new			buildFromForm: (PNGReadWriter formFromFileNamed: (map at: #boldOblique), ' ', point, '.png')			data: (FileStream oldFileNamed: (map at: #boldOblique), ' ', point, '.txt' do: [ :file |  				file contentsOfEntireFile substrings collect: [:each | each asNumber ]])			name: (map at: #name), ' ',point, 'BI')				pointSize: pointSize.	base derivativeFont: bold at: 1.	base derivativeFont: oblique at: 2.	base derivativeFont: boldOblique at: 3.	base].config := Dictionary newFromPairs: #(	name  'Bitmap DejaVu Sans' 	base 'DejaVu/DejaVu Sans Book'	bold 'DejaVu/DejaVu Sans Bold'	oblique 'DejaVu/DejaVu Sans Oblique'	boldOblique 'DejaVu/DejaVu Sans Bold Oblique').TextConstants at: (config at: #name) put:  (TextStyle fontArray: {	createDejaVu value: 7 value: config.	createDejaVu value: 9 value: config.	createDejaVu value: 12 value: config.}).Preferences restoreDefaultFonts